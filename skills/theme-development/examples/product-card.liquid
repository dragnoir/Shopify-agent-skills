<!-- 
  Product Card Example
  A reusable product card component for collection pages
  
  Parameters:
  - product: The product object (required)
  - show_vendor: Boolean to show vendor name (optional, default: false)
  - lazy_load: Boolean to lazy load images (optional, default: true)
-->

{% liquid
  assign show_vendor = show_vendor | default: false
  assign lazy_load = lazy_load | default: true
%}

<article class="product-card" itemscope itemtype="https://schema.org/Product">
  <!-- Product Link -->
  <a href="{{ product.url }}" class="product-card__link">
    
    <!-- Product Image -->
    <div class="product-card__image-container">
      {% if product.featured_image %}
        {{ product.featured_image | image_url: width: 600 | image_tag:
          loading: lazy_load | ternary: 'lazy', 'eager',
          class: 'product-card__image',
          widths: '300, 450, 600',
          sizes: '(max-width: 768px) 50vw, 300px',
          itemprop: 'image'
        }}
      {% else %}
        <div class="product-card__placeholder">
          {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {% endif %}
      
      <!-- Sale Badge -->
      {% if product.compare_at_price > product.price %}
        {% assign savings = product.compare_at_price | minus: product.price %}
        {% assign percent_off = savings | times: 100.0 | divided_by: product.compare_at_price | round %}
        <span class="product-card__badge product-card__badge--sale">
          {{ percent_off }}% OFF
        </span>
      {% endif %}
      
      <!-- Sold Out Badge -->
      {% unless product.available %}
        <span class="product-card__badge product-card__badge--sold-out">
          {{ 'products.product.sold_out' | t | default: 'Sold Out' }}
        </span>
      {% endunless %}
    </div>
    
    <!-- Product Info -->
    <div class="product-card__info">
      <!-- Vendor -->
      {% if show_vendor and product.vendor != blank %}
        <p class="product-card__vendor" itemprop="brand">
          {{ product.vendor }}
        </p>
      {% endif %}
      
      <!-- Title -->
      <h3 class="product-card__title" itemprop="name">
        {{ product.title }}
      </h3>
      
      <!-- Price -->
      <div class="product-card__price" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
        <meta itemprop="priceCurrency" content="{{ cart.currency.iso_code }}">
        
        {% if product.compare_at_price > product.price %}
          <span class="product-card__price--sale" itemprop="price" content="{{ product.price | money_without_currency }}">
            {{ product.price | money }}
          </span>
          <span class="product-card__price--compare">
            <s>{{ product.compare_at_price | money }}</s>
          </span>
        {% else %}
          <span class="product-card__price--regular" itemprop="price" content="{{ product.price | money_without_currency }}">
            {{ product.price | money }}
          </span>
        {% endif %}
        
        <!-- Price range for products with variants -->
        {% if product.price_varies %}
          <span class="product-card__price-from">
            {{ 'products.product.from' | t | default: 'From' }}
          </span>
        {% endif %}
        
        <!-- Availability -->
        <link itemprop="availability" href="https://schema.org/{% if product.available %}InStock{% else %}OutOfStock{% endif %}">
      </div>
      
      <!-- Options preview -->
      {% if product.has_only_default_variant == false %}
        <p class="product-card__options">
          {{ product.options.size }} {{ 'products.product.options' | t | default: 'options' }}
        </p>
      {% endif %}
    </div>
  </a>
  
  <!-- Quick Add Button (optional) -->
  {% if product.available and product.has_only_default_variant %}
    {% form 'product', product, class: 'product-card__form' %}
      <input type="hidden" name="id" value="{{ product.first_available_variant.id }}">
      <input type="hidden" name="quantity" value="1">
      <button type="submit" class="product-card__quick-add">
        {{ 'products.product.add_to_cart' | t | default: 'Add to Cart' }}
      </button>
    {% endform %}
  {% endif %}
</article>

<style>
  .product-card {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  .product-card__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  
  .product-card__image-container {
    position: relative;
    overflow: hidden;
    aspect-ratio: 1 / 1;
    background-color: #f5f5f5;
    border-radius: 8px;
    margin-bottom: 12px;
  }
  
  .product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .product-card__link:hover .product-card__image {
    transform: scale(1.05);
  }
  
  .product-card__badge {
    position: absolute;
    top: 8px;
    left: 8px;
    padding: 4px 8px;
    font-size: 12px;
    font-weight: 600;
    border-radius: 4px;
  }
  
  .product-card__badge--sale {
    background-color: #e63946;
    color: white;
  }
  
  .product-card__badge--sold-out {
    background-color: #333;
    color: white;
  }
  
  .product-card__vendor {
    font-size: 12px;
    color: #666;
    margin: 0 0 4px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .product-card__title {
    font-size: 16px;
    font-weight: 500;
    margin: 0 0 8px;
    line-height: 1.4;
  }
  
  .product-card__price {
    font-size: 14px;
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    align-items: center;
  }
  
  .product-card__price--sale {
    color: #e63946;
    font-weight: 600;
  }
  
  .product-card__price--compare {
    color: #999;
  }
  
  .product-card__options {
    font-size: 12px;
    color: #666;
    margin: 8px 0 0;
  }
  
  .product-card__quick-add {
    width: 100%;
    margin-top: 12px;
    padding: 12px 16px;
    background-color: #000;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    transition: background-color 0.2s;
  }
  
  .product-card__quick-add:hover {
    background-color: #333;
  }
</style>
